        div.title-container
          div.hamburger-menu &#9776;
          h1 Dev News and Blogs 
          div.settings-gear &#9881;
        div.header-seperator

    div.menu-block
      //- Left Menu with filter options
      div.menu-container
        div.menu-list
          div.menu-close &#10005;
          div.clear-filter Clear Filter
          div.filter-label Filter By Source:
          div.filter-container
            each source in uniqueSources
              div.source-filter= source
          div.filter-label Filter By Tags:
          div.filter-container
            each tag in uniqueTags
              div.tag-filter= tag

             
