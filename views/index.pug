    main

      //- Card Template
      each article in articles
        //- article.card-container
        article.card
          div.card-head
            //- Image and link to article
            a.article-link(href= article.articleLink) 
              img.image-link(src= article.imageLink   alt="display image for article")
          div.card-body
            //- tag links
            div.tag-container
              each link, i in article.tagLinks
                  a.tag-link(href= link)= article.tags[i]
            //- article and link
            a(href= article.articleLink) 
                h2.title= article.title
            //- author avatar with link
            div.author-block
              a.author-image-link(href= article.authorLink)
                if article.authorImageLink
                  img.author-image(src= article.authorImageLink alt="author's avatar")
              a.author-name(href= article.authorLink)
                P= article.author
              time.when-published= article.whenPublished
              //- Logo and link to source website
              a.source(href= article.sourceLink)
                img.source-logo(src= article.sourceLogo alt= article.sourceName)
          div.card-footer
            img.share(src= "images/icons/share.svg" alt="share")
            img.like(src= "images/icons/like.svg" alt="like")
            img.bookmark(src= "images/icons/bookmark.svg" alt="bookmark")
    


